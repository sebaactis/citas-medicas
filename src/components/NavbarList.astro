---
import {
    CalendarIcon,
    DepartmentsIcon,
    DoctorIcon,
    EarningIcon,
    HelpIcon,
    HouseIcon,
    MedicineIcon,
    PatientsIcon,
    SettingIcon,
} from "./Icons";

export interface Item {
    icon: keyof typeof Icons;
    title: string;
    link: string;
}

interface Props {
    list: Item[];
}

export const Icons = {
    "CalendarIcon": CalendarIcon,
    "DepartmentsIcon": DepartmentsIcon,
    "DoctorIcon": DoctorIcon,
    "EarningIcon": EarningIcon,
    "HelpIcon": HelpIcon,
    "HouseIcon": HouseIcon,
    "MedicineIcon": MedicineIcon,
    "PatientsIcon": PatientsIcon,
    "SettingIcon": SettingIcon
}

const { list } = Astro.props;
---

<ul class="flex flex-col px-6 gap-4">
    {
        list.map((item) => {
            const IconComponent = Icons[item.icon]
            return (
                <a
                    href={item.link}
                    class="text-slate-600 text-md font-semibold px-4 py-3 transition-all rounded-full hover:bg-blue-300 hover:text-white"
                >
                    <li class="flex gap-2 items-center">
                        <IconComponent />
                        {item.title}
                    </li>
                </a>
            );
        })
    }
</ul>
