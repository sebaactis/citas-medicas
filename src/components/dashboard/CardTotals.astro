---
import { CalendarCard, DoctorCard, IconCard, PersonCard } from "../Icons";

const Icons = {
    "CalendarCard": CalendarCard,
    "DoctorCard": DoctorCard,
    "IconCard": IconCard,
    "PersonCard": PersonCard
}
interface Props {
    icon: keyof typeof Icons;
    count: string;
    title: string;
    class: string;
}

const { icon, count, title } = Astro.props;
const IconComponent = Icons[icon];
---

<div
    class=`${Astro.props.class} flex flex-col justify-center gap-4 p-8 w-[18rem] h-[13rem] bg-slate-200 rounded-md`
>
    <IconComponent />
    <p class="text-3xl font-black">{count}</p>
    <p class="text-xl">{title}</p>
</div>
