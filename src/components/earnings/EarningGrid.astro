---
import LastEarnings from "@/components/earnings/LastEarnings.astro"
import EarningsMedic from "@/components/earnings/EarningsMedic.astro"
import TotalEarningsBarChart from "@/components/earnings/TotalEarningsBarChart.tsx"
---

<section class="grid grid-cols-12 gap-10">
    <article class="col-span-12 flex flex-col items-center justify-center bg-slate-100 p-5 mx-20 rounded-xl">
        <LastEarnings />
    </article>
    <article class="col-span-12 grid grid-cols-12 gap-5 mx-10 place-items-center">
        <EarningsMedic />
    </article>

    <article class="col-span-12 grid grid-cols-12 h-[19rem]">
        <div class="col-span-12 w-5/6 h-5/6 m-auto bg-slate-100 p-10 rounded-md">
            <TotalEarningsBarChart client:load/>
        </div>
    </article>
</section>