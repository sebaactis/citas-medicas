                <TableHead className="font-bold text-black dark:text-white text-center">Name</TableHead>
                <TableHead className="font-bold text-black dark:text-white text-center">Rated</TableHead>
            </TableRow>
        </TableHeader>
        <TableBody>
            {bestProducts.map((earning: any) => (
                <TableRow key={earning.id}>
                    <TableCell className="text-center dark:text-white">{earning.id}</TableCell>
                    <TableCell className="text-center dark:text-white">{earning.name}</TableCell>
                    <TableCell className="text-center dark:text-white">{earning.rated}</TableCell>
                </TableRow>
            ))}
        </TableBody>
    </Table>

</div>