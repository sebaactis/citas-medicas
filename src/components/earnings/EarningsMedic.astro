<div class="col-span-12 md:col-span-6 bg-slate-100/90 dark:bg-slate-600/95 rounded-xl md:w-5/6 pb-2">
    <Table className="mt-10">
        <h3 class="text-center text-2xl font-bold my-10 dark:text-white uppercase ">Drug earnings</h3>
        <TableHeader>
            <TableRow>
                <TableHead className="font-bold text-black dark:text-white text-center">Id</TableHead>
                <TableHead className="font-bold text-black dark:text-white text-center">Name</TableHead>
                <TableHead className="font-bold text-black dark:text-white text-center">Unit Price</TableHead>
                <TableHead className="font-bold text-black dark:text-white text-center">Quantity Sell</TableHead>
            </TableRow>
        </TableHeader>
        <TableBody>
            {drugEarnings.map((earning: any) => (
                <TableRow key={earning.id}>
                    <TableCell className="text-center dark:text-white">{earning.id}</TableCell>
                    <TableCell className="text-center dark:text-white">{earning.name}</TableCell>
                    <TableCell className="text-center dark:text-white">${earning.unitPrice}</TableCell>
                    <TableCell className="text-center dark:text-white">{earning.quantitySell}</TableCell>

                </TableRow>
            ))}
        </TableBody>
    </Table>

</div>
