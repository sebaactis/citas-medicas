---
import { Pill, Details, Edit, X } from "../Icons";

interface Props {
    name: string;
    price: string;
    class?: string;
}

const { name, price } = Astro.props;
---

<div
    class=`${Astro.props.class} flex flex-col gap-4 p-5 w-[20rem] col-span-12 md:col-span-4 bg-slate-100/90 dark:bg-slate-600/95 rounded-md shadow-2xl`
>
    <div class="flex justify-between gap-3">
        <div class="p-2 rounded-full bg-indigo-600">
            <Pill />
        </div>
        <p class="text-xl dark:text-white italic">${price}</p>
    </div>
    <p class="text-2xl font-black dark:text-white">{name}</p>
    <div>
        <button
            class="bg-blue-600 dark:bg-blue-500 hover:bg-blue-700 dark:hover:bg-blue-600 transition-all px-1.5 py-1 rounded-md text-white"
        >
            <Details />
        </button>
        <button
            class="bg-green-600 dark:bg-green-500 hover:bg-green-700 dark:hover:bg-green-600 transition-all px-1.5 py-1 rounded-md text-white"
        >
            <Edit />
        </button>
        <button
            class="bg-red-600 dark:bg-red-500 hover:bg-red-700 dark:hover:bg-red-600 transition-all px-1.5 py-1 rounded-md text-white"
        >
            <X />
        </button>
    </div>
</div>
