---
import "@/styles/globals.css";
import Layout from "../layouts/Layout.astro";
import AddDoctor from "@/components/doctors/AddDoctor";
import DoctorsList from "@/components/doctors/DoctorsList";
---

<Layout title="Medical dashboard">
    <section class="flex flex-col h-screen gap-12">
        <h3
            class="text-center font-bold text-3xl mt-5 dark:text-white uppercase"
        >
            Doctors
        </h3>
        <div class="flex flex-col md:flex-row items-center gap-10 2xl:gap-36">
            <AddDoctor client:idle />
            <DoctorsList client:idle />
        </div>
    </section>
</Layout>
