---
import "@/styles/globals.css";
import Layout from "../layouts/Layout.astro";
import { ModeToggle } from "@/components/ModeToggle";
---

<script is:inline>
	const getThemePreference = () => {
		if (
			typeof localStorage !== "undefined" &&
			localStorage.getItem("theme")
		) {
			return localStorage.getItem("theme");
		}
		return window.matchMedia("(prefers-color-scheme: dark)").matches
			? "dark"
			: "light";
	};

	const isDark = getThemePreference() === "dark";
	document.documentElement.classList[isDark ? "add" : "remove"]("dark");

	if (typeof localStorage !== "undefined") {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains("dark");
			localStorage.setItem("theme", isDark ? "dark" : "light");
		});
		observer.observe(document.documentElement, {
			attributes: true,
			attributeFilter: ["class"],
		});
	}
</script>

<Layout title="Medical dashboard">
	<section class="h-screen w-screen flex items-center justify-center">
		<article class="bg-slate-100/90 dark:bg-slate-600/95 w-3/5 h-4/5">
			<div class="flex m-20 items-center justify-around">
				<p class="uppercase font-bold">Establecer el modo oscuro</p>
				<ModeToggle client:load />
			</div>
		</article>
	</section>
</Layout>
