---
import "@/styles/globals.css";
import Layout from "../layouts/Layout.astro";
import AddDeparments from "@/components/departments/AddDepartments";
import DeparmentsList from "@/components/departments/DepartmentsList";
---

<Layout title="Medical dashboard">
    <section class="flex flex-col h-screen gap-12">
        <h3
            class="text-center font-bold text-3xl mt-5 dark:text-white uppercase"
        >
            DEPARTMENTS
        </h3>
        <div class="flex flex-col md:flex-row items-center gap-10 2xl:gap-36">
            <AddDeparments client:idle />
            <DeparmentsList />
        </div>
    </section>
</Layout>
